@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<h2>Movies</h2>


@* New Movie Button  *@
<p>
    @Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary" })
</p>

@* give table an id *@
<table id="movies" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Movie</th>
        <th>Genre</th>
        @* Add a new table header *@
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
            <td>@movie.Genre.Name</td>
            <td>
                @* Add Delete button and use bootstrap class btn-link and js-delete to handle button click
                   add data-movie-id="@movie.Id" so we can address the clicked movie's Id  *@
                <button data-movie-id="@movie.Id" class="btn-link js-delete">Delete</button>
            </td>
        </tr>
    }
    </tbody>
</table>

@section scripts
{
    
    @* get movies table and find all element with js-delete element
       add on click function and then popup confirmation box 

        *@

    <script>
        $(document).ready(function() {
            $("#movies .js-delete").on("click",
                function() {


                    var button = $(this);
                    @* bootbox confirmation box *@
                    bootbox.confirm("Are you sure you want to delete this movie?",
                        function(result) {
                            if (result) {

                                $.ajax({
                                        url: "/api/movies/" + button.attr("data-movie-id"),
                                        method: "DELETE",
                                        success: function() {

                                            button.parents("tr").remove();


                                        }
                                    }
                                );
                            }
                        });


                });

        });


    </script>


}
